<!-- Validation failure messages -->
<% if @session.errors.any? %>
  <% @session.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Session</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_session" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for session_name -->
      <div class="form-group">
        <label for="session_name" class="control-label">
          Session name
        </label>

        <input type="text" id="session_name" name="session_name" placeholder="Session name" class="form-control" value="<%= @session.session_name %>">
      </div>

      <!-- Label and input for start_time -->
      <div class="form-group">
        <label for="start_time" class="control-label">
          Start time
        </label>

        <input type="text" id="start_time" name="start_time" placeholder="Start time" class="form-control" value="<%= @session.start_time %>">
      </div>

      <!-- Label and input for end_time -->
      <div class="form-group">
        <label for="end_time" class="control-label">
          End time
        </label>

        <input type="text" id="end_time" name="end_time" placeholder="End time" class="form-control" value="<%= @session.end_time %>">
      </div>

      <!-- Label and input for instructor_id -->
      <div class="form-group">
        <label for="instructor_id" class="control-label">
          Instructor
        </label>

        <input type="text" id="instructor_id" name="instructor_id" placeholder="Instructor" class="form-control" value="<%= @session.instructor_id %>">
      </div>

      <!-- Label and input for instructor_mb_id -->
      <div class="form-group">
        <label for="instructor_mb_id" class="control-label">
          Instructor mb
        </label>

        <input type="text" id="instructor_mb_id" name="instructor_mb_id" placeholder="Instructor mb" class="form-control" value="<%= @session.instructor_mb_id %>">
      </div>

      <!-- Label and input for session_mb_id -->
      <div class="form-group">
        <label for="session_mb_id" class="control-label">
          Session mb
        </label>

        <input type="text" id="session_mb_id" name="session_mb_id" placeholder="Session mb" class="form-control" value="<%= @session.session_mb_id %>">
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @session.location %>">
      </div>

      <button class="btn btn-success">
        Create Session
      </button>
      or
      <a href="/sessions">Cancel</a>
    </form>
  </div>
</div>
