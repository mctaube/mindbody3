<!-- Validation failure messages -->
<% if @resident.errors.any? %>
  <% @resident.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Resident</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_resident" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @resident.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @resident.last_name %>">
      </div>

      <!-- Label and input for resident_mb_id -->
      <div class="form-group">
        <label for="resident_mb_id" class="control-label">
          Resident mb
        </label>

        <input type="text" id="resident_mb_id" name="resident_mb_id" placeholder="Resident mb" class="form-control" value="<%= @resident.resident_mb_id %>">
      </div>

      <button class="btn btn-success">
        Create Resident
      </button>
      or
      <a href="/residents">Cancel</a>
    </form>
  </div>
</div>
